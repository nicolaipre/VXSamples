{
    "name": "VXSamples",
    "dockerComposeFile": "docker-compose.yml",
    "service": "devcontainer",
    "workspaceFolder": "/workspaces/${localWorkspaceFolderBasename}",
    "postCreateCommand": "git config --global http.sslVerify false && pip install --upgrade pip && pip install --user poetry && cd backend && poetry install --no-root",
    "customizations": {
        "vscode": {
            "extensions": [
                "ms-python.python",
                "ms-python.vscode-pylance",
                "ms-azuretools.vscode-docker"
            ],
            "settings": {
                "python.defaultInterpreterPath": "./backend/.venv",
                "python.languageServer": "Pylance",
                "python.analysis.languageServerMode": "full",
                "python.analysis.typeCheckingMode": "strict",
                "python.analysis.exclude": [
                    //"**",           // exclude everything...
                    //"!backend/**"   // ...except the backend directory
                    "**/ansible",
                    "**/ansible/**",
                    "**/docs",
                    "**/docs/**",
                    "**/frontend",
                    "**/frontend/**",
                    "**/node_modules/**",
                    "**/.venv/**",
                    "**/__pycache__/**"
                ],
                //"python.terminal.activateEnvironment": true,
                //"python.terminal.activateEnvInCurrentTerminal": true,
                //"python.poetryEnabled": true,
            },
        }
    },

    //"features": {
    //    "ghcr.io/jsburckhardt/devcontainer-features/uv:1": {},
    //    "ghcr.io/devcontainers-extra/features/poetry:2": {}
    //},

    // handled by docker-compose.yml
    /*"forwardPorts": [
        3000,
        9000
    ],*/


    // Uncomment to connect as root instead. More info: https://aka.ms/dev-containers-non-root.
    //"remoteUser": "root", # "node"
    //"remoteUser": "vscode",


    //"postStartCommand": "sudo /etc/init.d/ssh start", // sudo service ssh start


    //"remoteEnv": {
    //    "PATH": "${containerEnv:PATH}:some/other/value:another/path/value"
    //},
    

    //"runArgs": [
    //    "--hostname", "hive-report.intern.sparebank1.no",
        //"--env-file", ".devcontainer/devcontainer.env"
    //],


    // monorepo shit to only grab frontend or backend (devcontainer must be made for each folder frontend/backend, which will resolve to localWorkspaceFolder
    //"workspaceMount": "source=${localWorkspaceFolder},target=/workspace},type=bind",
    //"workspaceFolder": "/workspace"

    /*"portsAttributes": {
        "3000": {
            "host": "0.0.0.0"
        },
        "9000": {
            "host": "0.0.0.0"
        }
    }*/
}



